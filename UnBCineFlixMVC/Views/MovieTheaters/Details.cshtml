@model UnBCineFlix.Models.MovieTheater

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<p class="text-danger">@ViewData["mensage"]</p>

<div>
    <h4>MovieTheater</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MovieTheaterNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MovieTheaterNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.QtdRow)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QtdRow)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.QtdCol)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QtdCol)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AddressCompany)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AddressCompany.Name)
        </dd>
    </dl>
</div>
<div>

    @Html.ActionLink("Edit", "Edit", new { Model.AddressCompanyId, Model.MovieTheaterNumber }) |
    @Html.ActionLink("CreateChair", "CreateChair", new { Model.AddressCompanyId, Model.MovieTheaterNumber }) |
    <a asp-action="Index">Back to List</a>
</div>
<table>
    @for (int i = 0; i < Model.QtdRow; i++)
    {
        <tr style="height:36px;">
            @for (int j = 0; j < Model.QtdCol; j++)
            {
            <td style="width:70px;">
                @if (Model.GetArrayChair(i, j) != null)
                {
                    if (Model.GetArrayChair(i, j).Status == false)
                    {
                        <i class="fas fa-couch" style="font-size:36px;"><br/>  @((char)(i+65))@(j+1) </i>
                    }
                }
            </td>
            }
        </tr>
    }
</table>
