@model IEnumerable<UnBCineFlix.Models.MovieTheater>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieTheaterNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdRow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdCol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressCompany)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieTheaterNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdRow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdCol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressCompany.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { item.AddressCompanyId,item.MovieTheaterNumber }) |
                @Html.ActionLink("Details", "Details", new { item.AddressCompanyId,item.MovieTheaterNumber }) |
                @Html.ActionLink("Delete", "Delete", new { item.AddressCompanyId,item.MovieTheaterNumber })
            </td>
        </tr>
}
    </tbody>
</table>
